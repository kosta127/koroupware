<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<typeAliases>
		<typeAlias type="kosta.document.model.Doc" alias="Doc" />
		<typeAlias type="kosta.document.model.DocBox" alias="DocBox" />
		<typeAlias type="kosta.document.model.DocManagement" alias="DocManagement" />
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<!-- POOL방식으로 JDBC 연결 -->
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
				<property name="username" value="koroupware"/>
				<property name="password" value="1234"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<!-- mapper등록 -->
		<mapper resource="kosta/document/mapper/Document.xml"/>
	</mappers>
</configuration>
